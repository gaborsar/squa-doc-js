{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "globals": {
    "jest": true,
    "describe": true,
    "beforeAll": true,
    "afterAll": true,
    "beforeEach": true,
    "afterEach": true,
    "it": true,
    "expect": true
  },
  "rules": {
    "eqeqeq": "error",
    "max-len":  ["error", 80],
    "no-console": ["error", { "allow": ["wran", "error"] }],
    "no-unused-vars": "error",
    "prefer-const": ["error", { "destructuring": "all" }],
    "prefer-template": "error",
    "radix": "error",
    "react/prop-types": "off"
  }
}
